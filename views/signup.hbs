<h2>Sign up Page</h2>

<form method="post" action="/sign-up">

    <label for="firstName">First Name</label>
    <input type="text" id="firstName" name="firstName" value="{{values.firstName}}" /><br/>

    {{#if validationMessages.firstName}}
        <span>{{validationMessages.firstName}}</span><br/>
    {{/if}}
        
    <label for="lastName">Last Name</label>
    <input type="text" id="laststName" name="lastName" value="{{values.lastName}}" /><br/>

    <label for="email">Email Address</label>
    <input type="text" id="email" name="email" value="{{values.email}}"/><br/>

    <label for="password">Password</label>
    <input type="password" id="password" name="password" value="{{values.password}}"/><br/>
      
    
    <input type="submit" value="Sign Up"/>


</form>


